h1 = t('titles.categories')

table.table.table-striped.table-hover.mb-5
  thead
    tr
      th{ scope = 'col' } = t('.tables.headers.id')
      th{ scope = 'col' } = t('active_record.attributes.category.name')
      th{ scope = 'col' } = t('.tables.headers.actions')
      th

  tbody
    - @categories.each do |category|
      tr
        td = category.id
        td = category.name

        td.d-flex
          = link_to t('links.edit'), edit_admin_category_path(category), class: 'me-4'
          = link_to t('links.delete'),
                    admin_category_path(category),
                    data: { turbo_method: :delete, turbo_confirm: t('confirm.category.delete', name: category.name) },
                    class: 'link-danger me-2'

= link_to t('links.new.category'), new_admin_category_path, class: 'btn btn-primary my-2'
